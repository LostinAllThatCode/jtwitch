<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/vlcj.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-36(%d{HH:mm:ss.SSS} [%thread]) %-5level %72logger{72} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="FILE"></appender-ref>
    </root>
</configuration>